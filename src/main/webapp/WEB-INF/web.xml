<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<welcome-file-list>
		<welcome-file>main</welcome-file>
	</welcome-file-list>

	<listener>
		<listener-class>holik.hotel.servlet.job.listener.ContextListener</listener-class>
	</listener>

	<servlet>
		<servlet-name>main</servlet-name>
		<servlet-class>holik.hotel.servlet.web.controller.MainController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>main</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>

	<context-param>
		<param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
		<param-value>resources</param-value>
	</context-param>

	<context-param>
		<param-name>javax.servlet.jsp.jstl.fmt.locale</param-name>
		<param-value>en</param-value>
	</context-param>

	<context-param>
		<param-name>locales</param-name>
		<param-value>ru en</param-value>
	</context-param>

	<error-page>
		<error-code>403</error-code>
		<location>/WEB-INF/403.jsp</location>
	</error-page>

	<error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>/WEB-INF/errorPage.jsp</location>
	</error-page>

	<context-param>
		<param-name>log4j-config-location</param-name>
		<param-value>WEB-INF/log4j.properties</param-value>
	</context-param>

	<filter>
		<filter-name>CommandAccessFilter</filter-name>
		<filter-class>holik.hotel.servlet.web.filter.CommandAccessFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>CommandAccessFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
</web-app>