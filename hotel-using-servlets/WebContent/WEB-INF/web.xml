<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>hotel-using-servlets</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<listener>
		<listener-class>holik.hotel.servlet.listener.ContextListener</listener-class>
	</listener>

	<servlet>
		<servlet-name>main</servlet-name>
		<servlet-class>holik.hotel.servlet.controller.MainController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>main</servlet-name>
		<url-pattern>/controller</url-pattern>
	</servlet-mapping>

	<context-param>
		<param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
		<param-value>resources</param-value>
	</context-param>

	<context-param>
		<param-name>javax.servlet.jsp.jstl.fmt.locale</param-name>
		<param-value>ru</param-value>
	</context-param>

	<context-param>
		<param-name>locales</param-name>
		<param-value>ru en</param-value>
	</context-param>

	<error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>/WEB-INF/jsp/error_page.jsp</location>
	</error-page>

	<error-page>
		<error-code>404</error-code>
		<location>/WEB-INF/jsp/error_page.jsp</location>
	</error-page>

	<context-param>
		<param-name>log4j-config-location</param-name>
		<param-value>WEB-INF/log4j.properties</param-value>
	</context-param>

	<filter>
		<filter-name>CommandAccessFilter</filter-name>
		<filter-class>holik.hotel.servlet.filters.CommandAccessFilter</filter-class>
		<init-param>
			<param-name>manager</param-name>
			<param-value>applications</param-value>
		</init-param>
		<init-param>
			<param-name>user</param-name>
			<param-value>application application</param-value>
		</init-param>
		<init-param>
			<param-name>common</param-name>
			<param-value>logout unknownCommand </param-value>
		</init-param>
		<init-param>
			<param-name>out-of-control</param-name>
			<param-value>login home getlogin signup getsignup rooms room language sorting</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>CommandAccessFilter</filter-name>
		<servlet-name>main</servlet-name>
	</filter-mapping>

	<filter>
		<filter-name>JspFilter</filter-name>
		<filter-class>holik.hotel.servlet.filters.JspFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>JspFilter</filter-name>
		<url-pattern>*.jsp</url-pattern>
		<url-pattern>/WEB-INF/jsp/*</url-pattern>
	</filter-mapping>
</web-app>